<% layout('/layout/boilerplate.ejs') %>
<style>
  .filter {
    margin-top: 2rem;
    text-align: center;
    margin-right: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info{
    display: none;
  }

  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    font-size: 0.8rem;
  }
</style>
<body>

  <div class="filters">
    <div class="filter"style="opacity: 1" onclick="navigateTo('/listings')">
      <div class="">
        <i class="fa-solid fa-house"></i>
        <p>Home</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/listings')">
      <div class="">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/filters/Rooms')">
      <div class="">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/filters/Iconic City')">
      <div class="">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic City</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/filters/Mountain')">
      <div class="">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountain</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/filters/Castle')">
      <div class="">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castle</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/filters/Pool')">
      <div class="">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing Pools</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/filters/Camping')">
      <div class="">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/filters/Farms')">
      <div class="">
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
      </div>
    </div>
    <div class="filter" onclick="navigateTo('/filters/Arctic')">
      <div class="">
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctic</p>
      </div>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault"><b>Display total after tax</b></label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% if (allListings && allListings.length > 0) { %>
      <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
          <div class="card col listing-card <%= listing.category %>">
            <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> /Night
                <i class="tax-info">  &nbsp; &nbsp;+18% tax</i>
              </p>
            </div>
          </div>
        </a>
      <% } %>
    <% } else { %>
      <p>No listings available.</p>
    <% } %>
  </div>
  

  <script>
    function navigateTo(route) {
      window.location.href = route;
    }

    let taxToggle = document.getElementById('flexSwitchCheckDefault')
    taxToggle.addEventListener('click', () => {
      let taxinfo = document.getElementsByClassName('tax-info')
      for (info of taxinfo) {
        info.style.display = taxToggle.checked ? 'inline' : 'none'
      }
    })
  </script>

</body>
